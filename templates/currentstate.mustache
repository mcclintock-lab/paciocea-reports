<div class="reportSection size">
  <h4>Size</h4>
  <p class="large">
    This {{#isCollection}}collection{{/isCollection}}{{^isCollection}}sketch area{{/isCollection}} is <strong>{{size}} km</strong>.
  </p>
</div>

<div class="reportSection tableContainer">
  <h4>Deep Sea </h4>
  <p class="in-report-header">Deep Sea Minerals:</p>
  <table> 
    <thead>
      <tr>
        <th style="width:170px;">Type</th>
        <th>Area (sq. km)</a></th>
        <th>Area (% of total region)</th>
      </tr>
      {{#mining}}
      <tr>
        <td>{{TYPE}}</td>
        <td>{{SIZE_SQKM}}</td>
        <td>{{PERC_TOT}}</td>
      </tr>
      {{/mining}}
    </thead>
  </table>
</div>

